<h1>Eat Da Burger</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
       {{!--  {{> cats/cat-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Ate Da Burger</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Da Burger</h2>
<form class="add-da-burger">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Ate Da Burger?</label><br>
    <input type="radio" name="devoured" value="1" checked> Ated!<br>
    <input type="radio" name="devoured" value="0"> Still there
  </div>

  <button type="submit">Add Da Burger</button>
</form>